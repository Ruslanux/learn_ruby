<%= form_with model: [:admin, @exercise], class: "space-y-4 sm:space-y-6" do |form| %>
  <% if @exercise.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4">
      <h4 class="text-red-800 font-medium text-sm sm:text-base">
        <%= t('admin.errors_prohibited', count: @exercise.errors.count) %>:
      </h4>
      <ul class="list-disc list-inside mt-2 text-red-700 text-sm">
        <% @exercise.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
    <div>
      <%= form.label :lesson_id, t('admin.lesson'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.collection_select :lesson_id, @lessons, :id, ->(l) { "#{l.module_number}. #{l.title}" },
          { prompt: t('admin.select_lesson') },
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 text-base" %>
    </div>

    <div>
      <%= form.label :title, t('activerecord.attributes.exercise.title'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 text-base" %>
    </div>

    <div>
      <%= form.label :points, t('activerecord.attributes.exercise.points'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :points, min: 0, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 text-base" %>
    </div>

    <div>
      <%= form.label :position, t('admin.position'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :position, min: 1, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 text-base" %>
    </div>
  </div>

  <div>
    <%= form.label :description, t('activerecord.attributes.exercise.description'), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 font-mono text-sm" %>
    <p class="text-xs sm:text-sm text-gray-500 mt-1"><%= t('admin.supports_markdown') %></p>
  </div>

  <div>
    <%= form.label :instructions, t('activerecord.attributes.exercise.instructions'), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :instructions, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 font-mono text-sm" %>
    <p class="text-xs sm:text-sm text-gray-500 mt-1"><%= t('admin.step_by_step') %></p>
  </div>

  <div>
    <%= form.label :starter_code, t('activerecord.attributes.exercise.starter_code'), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :starter_code, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 font-mono text-xs sm:text-sm bg-gray-900 text-gray-100" %>
    <p class="text-xs sm:text-sm text-gray-500 mt-1"><%= t('admin.initial_code') %></p>
  </div>

  <div>
    <%= form.label :solution_code, t('activerecord.attributes.exercise.solution_code'), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :solution_code, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 font-mono text-xs sm:text-sm bg-gray-900 text-gray-100" %>
    <p class="text-xs sm:text-sm text-gray-500 mt-1"><%= t('admin.reference_solution') %></p>
  </div>

  <div>
    <%= form.label :test_code, t('activerecord.attributes.exercise.test_code'), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :test_code, rows: 8, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 font-mono text-xs sm:text-sm bg-gray-900 text-gray-100" %>
    <p class="text-xs sm:text-sm text-gray-500 mt-1"><%= t('admin.test_code_help') %></p>
  </div>

  <div class="flex flex-col-reverse sm:flex-row sm:justify-end gap-2 sm:space-x-3">
    <%= link_to t('admin.cancel'), (@exercise.persisted? ? admin_exercise_path(@exercise) : admin_exercises_path), class: "px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition text-center text-sm sm:text-base" %>
    <%= form.submit class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition cursor-pointer text-sm sm:text-base" %>
  </div>
<% end %>
