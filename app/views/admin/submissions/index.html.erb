<% content_for(:page_title, t('admin.submissions')) %>

<div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3 mb-4 sm:mb-6">
  <div class="flex flex-col sm:flex-row sm:items-center gap-3 sm:space-x-4">
    <p class="text-gray-600 text-sm sm:text-base"><%= t('admin.submissions_total', count: @total_count) %></p>
    <div class="flex rounded-lg overflow-hidden border border-gray-300">
      <%= link_to t('admin.all'), admin_submissions_path,
          class: "px-3 py-1 text-xs sm:text-sm #{@filter.nil? ? 'bg-red-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}" %>
      <%= link_to t('admin.passed'), admin_submissions_path(filter: "passed"),
          class: "px-3 py-1 text-xs sm:text-sm border-l border-gray-300 #{@filter == 'passed' ? 'bg-green-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}" %>
      <%= link_to t('admin.failed'), admin_submissions_path(filter: "failed"),
          class: "px-3 py-1 text-xs sm:text-sm border-l border-gray-300 #{@filter == 'failed' ? 'bg-red-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}" %>
    </div>
  </div>
</div>

<!-- Desktop Table -->
<div class="bg-white rounded-lg shadow overflow-hidden hidden sm:block">
  <table class="w-full">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"><%= t('admin.user') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"><%= t('admin.exercise') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"><%= t('admin.status') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden md:table-cell"><%= t('admin.exec_time') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden lg:table-cell"><%= t('admin.submitted') %></th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase"><%= t('admin.actions') %></th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @submissions.each do |submission| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to submission.user.username, admin_user_path(submission.user), class: "text-blue-600 hover:underline" %>
          </td>
          <td class="px-6 py-4">
            <%= link_to truncate(submission.exercise.title, length: 30), admin_exercise_path(submission.exercise), class: "text-gray-800 hover:underline" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if submission.passed %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                <%= t('admin.passed') %>
              </span>
            <% else %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                <%= t('admin.failed') %>
              </span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-gray-600 text-sm hidden md:table-cell">
            <% if submission.execution_time %>
              <%= (submission.execution_time * 1000).round %>ms
            <% else %>
              -
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-gray-500 text-sm hidden lg:table-cell">
            <%= time_ago_in_words(submission.created_at) %> <%= t('common.ago') %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
            <%= link_to t('admin.view'), admin_submission_path(submission), class: "text-blue-600 hover:text-blue-800" %>
          </td>
        </tr>
      <% end %>
      <% if @submissions.empty? %>
        <tr>
          <td colspan="6" class="px-6 py-8 text-center text-gray-500">
            <%= t('admin.no_submissions_found') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Mobile Cards -->
<div class="sm:hidden space-y-3">
  <% @submissions.each do |submission| %>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-start justify-between mb-2">
        <div class="min-w-0 flex-1">
          <%= link_to submission.user.username, admin_user_path(submission.user), class: "font-medium text-blue-600 hover:underline" %>
          <p class="text-sm text-gray-600 truncate"><%= submission.exercise.title %></p>
        </div>
        <% if submission.passed %>
          <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 flex-shrink-0 ml-2">
            <%= t('admin.passed') %>
          </span>
        <% else %>
          <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 flex-shrink-0 ml-2">
            <%= t('admin.failed') %>
          </span>
        <% end %>
      </div>
      <div class="flex items-center justify-between text-xs text-gray-500">
        <div class="flex items-center space-x-3">
          <% if submission.execution_time %>
            <span><%= (submission.execution_time * 1000).round %>ms</span>
          <% end %>
          <span><%= time_ago_in_words(submission.created_at) %></span>
        </div>
        <%= link_to t('admin.view'), admin_submission_path(submission), class: "text-blue-600 hover:text-blue-800" %>
      </div>
    </div>
  <% end %>
  <% if @submissions.empty? %>
    <div class="bg-white rounded-lg shadow p-6 text-center text-gray-500">
      <%= t('admin.no_submissions_found') %>
    </div>
  <% end %>
</div>

<%= render "admin/shared/pagination", extra_params: { filter: @filter } %>
