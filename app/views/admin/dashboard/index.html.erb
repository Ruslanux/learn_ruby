<% content_for(:page_title, t('admin.dashboard')) %>

<!-- Stats Grid -->
<div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6 mb-6 sm:mb-8">
  <!-- Total Users -->
  <div class="bg-white rounded-lg shadow p-4 sm:p-6">
    <div class="flex items-center">
      <div class="p-2 sm:p-3 bg-blue-100 rounded-full flex-shrink-0">
        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
      </div>
      <div class="ml-3 sm:ml-4 min-w-0">
        <p class="text-xs sm:text-sm text-gray-500 truncate"><%= t('admin.stats.total_users') %></p>
        <p class="text-xl sm:text-2xl font-semibold text-gray-800"><%= @stats[:total_users] %></p>
      </div>
    </div>
    <p class="text-xs sm:text-sm text-gray-500 mt-2">
      <span class="text-green-600"><%= @stats[:active_users_today] %></span> <%= t('admin.today') %>
    </p>
  </div>

  <!-- Total Submissions -->
  <div class="bg-white rounded-lg shadow p-4 sm:p-6">
    <div class="flex items-center">
      <div class="p-2 sm:p-3 bg-green-100 rounded-full flex-shrink-0">
        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <div class="ml-3 sm:ml-4 min-w-0">
        <p class="text-xs sm:text-sm text-gray-500 truncate"><%= t('admin.stats.total_submissions') %></p>
        <p class="text-xl sm:text-2xl font-semibold text-gray-800"><%= @stats[:total_submissions] %></p>
      </div>
    </div>
    <p class="text-xs sm:text-sm text-gray-500 mt-2">
      <span class="text-green-600"><%= @stats[:submissions_today] %></span> <%= t('admin.today') %>
    </p>
  </div>

  <!-- Pass Rate -->
  <div class="bg-white rounded-lg shadow p-4 sm:p-6">
    <div class="flex items-center">
      <div class="p-2 sm:p-3 bg-yellow-100 rounded-full flex-shrink-0">
        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="ml-3 sm:ml-4 min-w-0">
        <p class="text-xs sm:text-sm text-gray-500 truncate"><%= t('admin.stats.pass_rate') %></p>
        <p class="text-xl sm:text-2xl font-semibold text-gray-800"><%= @stats[:pass_rate] %>%</p>
      </div>
    </div>
    <p class="text-xs sm:text-sm text-gray-500 mt-2 hidden sm:block">
      <%= t('admin.stats.across_all') %>
    </p>
  </div>

  <!-- Content -->
  <div class="bg-white rounded-lg shadow p-4 sm:p-6">
    <div class="flex items-center">
      <div class="p-2 sm:p-3 bg-purple-100 rounded-full flex-shrink-0">
        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
      </div>
      <div class="ml-3 sm:ml-4 min-w-0">
        <p class="text-xs sm:text-sm text-gray-500 truncate"><%= t('admin.stats.content') %></p>
        <p class="text-xl sm:text-2xl font-semibold text-gray-800"><%= @stats[:total_lessons] %> / <%= @stats[:total_exercises] %></p>
      </div>
    </div>
    <p class="text-xs sm:text-sm text-gray-500 mt-2 hidden sm:block">
      <%= t('admin.stats.lessons_exercises') %>
    </p>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6">
  <!-- Recent Submissions -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-4 sm:px-6 py-3 sm:py-4 border-b border-gray-200">
      <h3 class="text-base sm:text-lg font-semibold text-gray-800"><%= t('admin.recent_submissions') %></h3>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase"><%= t('admin.user') %></th>
            <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase hidden sm:table-cell"><%= t('admin.exercise') %></th>
            <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase"><%= t('admin.status') %></th>
            <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase hidden sm:table-cell"><%= t('admin.time') %></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @recent_submissions.each do |submission| %>
            <tr class="hover:bg-gray-50">
              <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-sm text-gray-800">
                <%= submission.user.username %>
              </td>
              <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-sm text-gray-600 hidden sm:table-cell">
                <%= truncate(submission.exercise.title, length: 20) %>
              </td>
              <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap">
                <% if submission.passed %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                    <%= t('admin.pass') %>
                  </span>
                <% else %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                    <%= t('admin.fail') %>
                  </span>
                <% end %>
              </td>
              <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell">
                <%= time_ago_in_words(submission.created_at) %>
              </td>
            </tr>
          <% end %>
          <% if @recent_submissions.empty? %>
            <tr>
              <td colspan="4" class="px-6 py-8 text-center text-gray-500 text-sm">
                <%= t('admin.no_submissions_yet') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="px-4 sm:px-6 py-3 border-t border-gray-200">
      <%= link_to t('admin.view_all_submissions'), admin_submissions_path, class: "text-sm text-red-600 hover:text-red-800" %>
    </div>
  </div>

  <!-- Popular Exercises & Top Users -->
  <div class="space-y-4 sm:space-y-6">
    <!-- Popular Exercises -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 sm:px-6 py-3 sm:py-4 border-b border-gray-200">
        <h3 class="text-base sm:text-lg font-semibold text-gray-800"><%= t('admin.popular_exercises') %></h3>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @popular_exercises.each_with_index do |exercise, index| %>
          <li class="px-4 sm:px-6 py-3 sm:py-4 flex items-center justify-between hover:bg-gray-50">
            <div class="flex items-center min-w-0">
              <span class="text-base sm:text-lg font-bold text-gray-400 w-5 sm:w-6 flex-shrink-0"><%= index + 1 %>.</span>
              <span class="ml-2 sm:ml-3 text-gray-800 text-sm sm:text-base truncate"><%= exercise.title %></span>
            </div>
            <span class="text-xs sm:text-sm text-gray-500 flex-shrink-0 ml-2"><%= exercise.submission_count %></span>
          </li>
        <% end %>
        <% if @popular_exercises.empty? %>
          <li class="px-6 py-8 text-center text-gray-500 text-sm">
            <%= t('admin.no_exercises_yet') %>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Top Users -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 sm:px-6 py-3 sm:py-4 border-b border-gray-200">
        <h3 class="text-base sm:text-lg font-semibold text-gray-800"><%= t('admin.top_users') %></h3>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @top_users.each_with_index do |user, index| %>
          <li class="px-4 sm:px-6 py-3 sm:py-4 flex items-center justify-between hover:bg-gray-50">
            <div class="flex items-center min-w-0">
              <% medal = case index
                         when 0 then "ðŸ¥‡"
                         when 1 then "ðŸ¥ˆ"
                         when 2 then "ðŸ¥‰"
                         else (index + 1).to_s + "."
                         end %>
              <span class="text-base sm:text-lg w-5 sm:w-6 flex-shrink-0"><%= medal %></span>
              <span class="ml-2 sm:ml-3 text-gray-800 text-sm sm:text-base truncate"><%= user.username %></span>
              <span class="ml-2 text-xs text-gray-500 hidden sm:inline">Lvl <%= user.level %></span>
            </div>
            <span class="text-xs sm:text-sm font-semibold text-gray-600 flex-shrink-0 ml-2"><%= user.total_points %> pts</span>
          </li>
        <% end %>
        <% if @top_users.empty? %>
          <li class="px-6 py-8 text-center text-gray-500 text-sm">
            <%= t('admin.no_users_yet') %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
