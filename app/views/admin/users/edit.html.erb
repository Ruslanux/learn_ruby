<% content_for(:page_title, "#{t('admin.edit')} #{@user.username}") %>

<div class="mb-4 sm:mb-6">
  <%= link_to "â† #{t('admin.back_to')} #{@user.username}", admin_user_path(@user), class: "text-gray-600 hover:text-gray-800 text-sm sm:text-base" %>
</div>

<div class="bg-white rounded-lg shadow p-4 sm:p-6 max-w-2xl">
  <h3 class="text-base sm:text-lg font-semibold text-gray-800 mb-4 sm:mb-6"><%= t('admin.edit_user') %></h3>

  <%= form_with model: [:admin, @user], class: "space-y-4 sm:space-y-6" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4">
        <h4 class="text-red-800 font-medium text-sm sm:text-base">
          <%= t('admin.errors_prohibited', count: @user.errors.count) %>:
        </h4>
        <ul class="list-disc list-inside mt-2 text-red-700 text-sm">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :username, t('activerecord.attributes.user.username'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :username, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 text-base" %>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
      <div>
        <%= form.label :level, t('activerecord.attributes.user.level'), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :level, min: 1, max: 10, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 text-base" %>
      </div>

      <div>
        <%= form.label :total_points, t('activerecord.attributes.user.total_points'), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :total_points, min: 0, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-red-500 focus:border-red-500 text-base" %>
      </div>
    </div>

    <div class="bg-gray-50 rounded-lg p-3 sm:p-4">
      <p class="text-xs sm:text-sm text-gray-600">
        <strong><%= t('common.warning') %>:</strong> <%= t('admin.email_password_note') %>
      </p>
    </div>

    <div class="flex flex-col-reverse sm:flex-row sm:justify-end gap-2 sm:space-x-3">
      <%= link_to t('admin.cancel'), admin_user_path(@user), class: "px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition text-center text-sm sm:text-base" %>
      <%= form.submit t('admin.save_changes'), class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition cursor-pointer text-sm sm:text-base" %>
    </div>
  <% end %>
</div>
