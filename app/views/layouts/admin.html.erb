<!DOCTYPE html>
<html>
  <head>
    <title>Admin - <%= content_for(:title) || "Learn Ruby" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="icon" href="/icon.png" type="image/png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100 min-h-screen" data-controller="admin-menu">
    <!-- Mobile Overlay -->
    <div data-admin-menu-target="overlay"
         data-action="click->admin-menu#close"
         class="hidden fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden"></div>

    <div class="flex">
      <!-- Sidebar -->
      <aside data-admin-menu-target="sidebar"
             class="w-64 bg-gray-800 min-h-screen fixed z-50 transform -translate-x-full lg:translate-x-0 transition-transform duration-200">
        <div class="p-4">
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-white text-xl font-bold flex items-center space-x-2">
                <span><%= t('admin.title') %></span>
              </h1>
              <p class="text-gray-400 text-sm mt-1">LearnRuby</p>
            </div>
            <!-- Close button for mobile -->
            <button type="button"
                    data-action="admin-menu#close"
                    class="lg:hidden text-gray-400 hover:text-white p-1">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        </div>

        <nav class="mt-4">
          <%= link_to admin_root_path, class: "flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition #{request.path == admin_root_path ? 'bg-gray-700 text-white border-l-4 border-red-500' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <%= t('admin.dashboard') %>
          <% end %>

          <%= link_to admin_lessons_path, class: "flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition #{request.path.start_with?('/admin/lessons') ? 'bg-gray-700 text-white border-l-4 border-red-500' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <%= t('admin.lessons') %>
          <% end %>

          <%= link_to admin_exercises_path, class: "flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition #{request.path.start_with?('/admin/exercises') ? 'bg-gray-700 text-white border-l-4 border-red-500' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
            <%= t('admin.exercises') %>
          <% end %>

          <%= link_to admin_submissions_path, class: "flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition #{request.path.start_with?('/admin/submissions') ? 'bg-gray-700 text-white border-l-4 border-red-500' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <%= t('admin.submissions') %>
          <% end %>

          <%= link_to admin_users_path, class: "flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition #{request.path.start_with?('/admin/users') ? 'bg-gray-700 text-white border-l-4 border-red-500' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <%= t('admin.users') %>
          <% end %>

          <div class="border-t border-gray-700 mt-4 pt-4">
            <%= link_to root_path, class: "flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 15l-3-3m0 0l3-3m-3 3h8M3 12a9 9 0 1118 0 9 9 0 01-18 0z"></path>
              </svg>
              <%= t('admin.back_to_site') %>
            <% end %>
          </div>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 lg:ml-64 min-h-screen">
        <!-- Top Bar -->
        <header class="bg-white shadow-sm border-b border-gray-200 px-4 sm:px-6 py-3 sm:py-4">
          <div class="flex justify-between items-center">
            <div class="flex items-center">
              <!-- Mobile menu button -->
              <button type="button"
                      data-action="admin-menu#toggle"
                      class="lg:hidden mr-3 p-2 rounded-lg hover:bg-gray-100 transition">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
              </button>
              <h2 class="text-lg sm:text-xl font-semibold text-gray-800 truncate">
                <%= content_for(:page_title) || t('admin.dashboard') %>
              </h2>
            </div>
            <div class="flex items-center space-x-2 sm:space-x-4">
              <span class="hidden sm:inline text-gray-600 text-sm">
                <%= t('admin.logged_in_as') %> <strong><%= current_user.username %></strong>
              </span>
              <%= button_to t('nav.sign_out'), destroy_user_session_path, method: :delete, class: "bg-gray-200 hover:bg-gray-300 px-2 sm:px-3 py-1 rounded text-sm transition" %>
            </div>
          </div>
        </header>

        <!-- Flash Messages -->
        <% if notice %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 mx-4 sm:mx-6 mt-4 rounded text-sm relative"
               role="alert"
               data-controller="flash"
               data-flash-delay-value="5000">
            <span class="pr-8"><%= notice %></span>
            <button type="button"
                    class="absolute top-0 right-0 px-4 py-3 text-green-700 hover:text-green-900 transition"
                    data-action="flash#dismiss"
                    aria-label="Close">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        <% end %>

        <% if alert %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mx-4 sm:mx-6 mt-4 rounded text-sm relative"
               role="alert"
               data-controller="flash"
               data-flash-delay-value="5000">
            <span class="pr-8"><%= alert %></span>
            <button type="button"
                    class="absolute top-0 right-0 px-4 py-3 text-red-700 hover:text-red-900 transition"
                    data-action="flash#dismiss"
                    aria-label="Close">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        <% end %>

        <!-- Page Content -->
        <div class="p-4 sm:p-6">
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
