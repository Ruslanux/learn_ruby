<div class="max-w-md mx-auto mt-4 sm:mt-8 px-4 sm:px-0">
  <div class="bg-white p-5 sm:p-8 rounded-xl shadow-md">
    <h2 class="text-xl sm:text-2xl font-bold text-center mb-4 sm:mb-6"><%= t('nav.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 text-base",
            placeholder: "your@email.com" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password",
            class: "w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 text-base" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
        </div>
      <% end %>

      <div class="pt-2 sm:pt-4">
        <%= f.submit t('nav.sign_in'), class: "w-full bg-red-600 text-white py-2.5 sm:py-3 px-4 rounded-lg font-semibold hover:bg-red-700 transition cursor-pointer text-sm sm:text-base" %>
      </div>
    <% end %>

    <div class="mt-4 sm:mt-6 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
