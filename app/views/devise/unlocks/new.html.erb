<div class="max-w-md mx-auto mt-4 sm:mt-8 px-4 sm:px-0">
  <div class="bg-white p-5 sm:p-8 rounded-xl shadow-md">
    <h2 class="text-xl sm:text-2xl font-bold text-center mb-4 sm:mb-6"><%= t('devise.unlocks.new.resend_unlock_instructions', default: 'Resend unlock instructions') %></h2>

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 text-base",
            placeholder: "your@email.com" %>
      </div>

      <div class="pt-2 sm:pt-4">
        <%= f.submit t('devise.unlocks.new.resend_unlock_instructions', default: 'Resend unlock instructions'), class: "w-full bg-red-600 text-white py-2.5 sm:py-3 px-4 rounded-lg font-semibold hover:bg-red-700 transition cursor-pointer text-sm sm:text-base" %>
      </div>
    <% end %>

    <div class="mt-4 sm:mt-6 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
