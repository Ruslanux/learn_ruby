<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800"><%= t('lessons.title') %></h1>
    <p class="text-gray-600 mt-2"><%= t('lessons.subtitle') %></p>
  </div>

  <% if @modules.empty? %>
    <div class="bg-white rounded-xl shadow-md p-12 text-center">
      <div class="text-6xl mb-4">ðŸ“š</div>
      <h2 class="text-xl font-semibold text-gray-700 mb-2"><%= t('lessons.no_lessons') %></h2>
      <p class="text-gray-500"><%= t('lessons.check_back') %></p>
    </div>
  <% else %>
    <!-- Module Cards -->
    <div class="space-y-8">
      <% @modules.each do |module_number, lessons| %>
        <% progress = progress_for_module(module_number, lessons, @user_progress) %>
        <% first_lesson = lessons.first %>

        <div class="bg-white rounded-xl shadow-md overflow-hidden">
          <!-- Module Header -->
          <div class="<%= difficulty_bg_class(first_lesson&.difficulty) %> p-4 sm:p-6 border-b">
            <div class="flex items-start justify-between gap-3">
              <div class="flex items-start space-x-3 sm:space-x-4 min-w-0">
                <div class="text-3xl sm:text-4xl font-bold text-gray-300 flex-shrink-0">
                  <%= module_number %>
                </div>
                <div class="min-w-0">
                  <h2 class="text-lg sm:text-xl font-bold text-gray-800">
                    <%= module_name(module_number) %>
                  </h2>
                  <p class="text-gray-600 text-xs sm:text-sm">
                    <%= module_description(module_number) %>
                  </p>
                </div>
              </div>
              <div class="text-right flex-shrink-0">
                <%= difficulty_badge(first_lesson&.difficulty || "beginner") %>
                <div class="text-xs sm:text-sm text-gray-500 mt-1">
                  <%= lessons.sum { |l| l.exercises.count } %> <%= t('lessons.exercises') %>
                </div>
              </div>
            </div>

            <% if user_signed_in? %>
              <!-- Progress Bar -->
              <div class="mt-4">
                <div class="flex justify-between text-sm text-gray-600 mb-1">
                  <span><%= t('lessons.progress') %></span>
                  <span><%= progress %>%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-red-500 h-2 rounded-full transition-all duration-300"
                       style="width: <%= progress %>%"></div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Lessons List -->
          <div class="divide-y divide-gray-100">
            <% lessons.each_with_index do |lesson, index| %>
              <% lesson_progress = progress_for_lesson(lesson, @user_progress) %>
              <%= link_to lesson_path(lesson), class: "flex items-center p-3 sm:p-4 hover:bg-gray-50 transition group" do %>
                <div class="flex-shrink-0 w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-gray-100 flex items-center justify-center text-xs sm:text-sm font-medium text-gray-600 group-hover:bg-red-100 group-hover:text-red-600 transition">
                  <%= index + 1 %>
                </div>
                <div class="ml-3 sm:ml-4 flex-grow min-w-0">
                  <h3 class="font-medium text-sm sm:text-base text-gray-800 group-hover:text-red-600 transition truncate">
                    <%= lesson.translated_title %>
                  </h3>
                  <p class="text-xs sm:text-sm text-gray-500 line-clamp-1 hidden sm:block">
                    <%= truncate(lesson.translated_description, length: 80) %>
                  </p>
                </div>
                <div class="flex items-center space-x-2 sm:space-x-4 flex-shrink-0">
                  <% if user_signed_in? %>
                    <div class="text-xs sm:text-sm text-gray-500">
                      <% if lesson_progress == 100 %>
                        <span class="text-green-600 font-medium"><%= t('lessons.completed') %></span>
                      <% elsif lesson_progress > 0 %>
                        <span class="text-yellow-600"><%= lesson_progress %>%</span>
                      <% else %>
                        <span class="hidden sm:inline"><%= t('lessons.not_started') %></span>
                      <% end %>
                    </div>
                  <% end %>
                  <div class="text-gray-400 group-hover:text-red-500 transition">
                    <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
